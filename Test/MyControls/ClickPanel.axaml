<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Test.MyControls">
  <Design.PreviewWith>
    <controls:ClickPanel />
  </Design.PreviewWith>

  <Style Selector="controls|ClickPanel">
    <!-- Set Defaults -->
    <Setter Property="Template">
      <ControlTemplate>
        
			  <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
	      <Button Name="btn1" Command="{Binding ButtonOnClick}"></Button>
  	      <Button Name="btn2" Command="{Binding ButtonOnClick}"></Button>
  	      <Button Name="btn3" Command="{Binding ButtonOnClick}"></Button>

		  </StackPanel>
		  
	  
      </ControlTemplate>
    </Setter>
  
  </Style>
	  <Style Selector="Button">
    <Setter Property="Width" Value="60" />
	<Setter Property="Height" Value="4"/>
    <Setter Property="Margin" Value="2" />
    <Setter Property="Background" Value="Gray"/>
   
  </Style>
<Style Selector="Button:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="Gray" />
	</Style>
	<Style Selector="Button:pointerover /template/ ContentPresenter">
		<Setter Property="Background" Value="Gray" />
	</Style>
</Styles>
